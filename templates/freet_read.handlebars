
 {{#if refreet}}
 <tr class="note" data-note-id={{_id}}>
   <td>
     <b style = "color: blue"> @{{orig}} </b> refreeted from <b style = "color: blue"> @{{posterName}}</b> <em>{{time}}</em>
   <br/> <br/>
   {{content}}
 </td>
   <td style = "width: 100px">
     <a href="#" class="refreet-button waves-effect waves-light btn blue darken-3" freet-id={{_id}}>Refreet</a>
   </td>
 </tr>

 {{else}}
 <tr class="note" data-note-id={{_id}}>
   <td>
     <b style = "color: blue"> @{{posterName}} </b> <em> posted {{time}} </em>
      <br/> <br/>
     {{content}}
   </td>
    <td style = "width: 100px">
       <a href="#" class="refreet-button waves-effect waves-light btn blue darken-3" freet-id={{_id}}>Refreet</a>
    </td>
  </tr>
 {{/if}}
